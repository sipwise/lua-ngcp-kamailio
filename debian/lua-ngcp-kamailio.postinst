#! /bin/sh

set -e

case "$1" in
    configure)
        if [ $(systemctl is-active kamailio-proxy) = "active" ] ; then
            ngcp-sercmd proxy app_lua.reload 0 || true
        fi
        ;;

    abort-upgrade|abort-remove|abort-deconfigure)
        ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

